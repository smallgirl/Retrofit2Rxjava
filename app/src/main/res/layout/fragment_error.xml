<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_onErrorReturn"
            style="@style/button_style"
            android:text="catch操作符的体现---onErrorReturn" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_onErrorResumeNext"
            style="@style/button_style"
            android:text="catch操作符的体现---onErrorResumeNext" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_onExceptionResumeNext"
            style="@style/button_style"
            android:text="catch操作符的体现---onExceptionResumeNext" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_retry"
            style="@style/button_style"
            android:text="retry错误操作符" />
    </LinearLayout>
</ScrollView>